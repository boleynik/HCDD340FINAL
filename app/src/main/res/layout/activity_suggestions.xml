<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <!-- Title -->
            <TextView
                android:id="@+id/app_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="16dp"
                android:text="@string/here_are_our_suggestions"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Music Section -->

            <TextView
                android:id="@+id/music_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="@string/music"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />


            <!-- Movies Section -->
            <LinearLayout
                android:id="@+id/musicLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/music1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/happy1"
                    android:textColorLink="#3F51B5" />

                <TextView
                    android:id="@+id/music2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/happy2"
                    android:textColorLink="#3F51B5" />
            </LinearLayout>

            <TextView
                android:id="@+id/movies_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Movies"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <!-- Recipes Section -->
            <LinearLayout
                android:id="@+id/movieLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/movie1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/happy_movie1"
                    android:textColorLink="#3F51B5" />

                <TextView
                    android:id="@+id/movie2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/happy_movie2"
                    android:textColorLink="#3F51B5" />
            </LinearLayout>

            <TextView
                android:id="@+id/recipes_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recipes"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <!-- Fitness Section -->
            <LinearLayout
                android:id="@+id/recipeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recipe1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/happy_recipe1"
                    android:textColorLink="#3F51B5" />

                <TextView
                    android:id="@+id/recipe2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/happy_recipe2"
                    android:textColorLink="#3F51B5" />

            </LinearLayout>

            <TextView
                android:id="@+id/fitness_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="@string/Fitness"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />


            <!-- Mindfulness Section -->
            <LinearLayout
                android:id="@+id/fitnessLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fitness1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/happy_workout1"
                    android:textColorLink="#3F51B5" />

                <TextView
                    android:id="@+id/fitness2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/happy_workout2"
                    android:textColorLink="#3F51B5" />
            </LinearLayout>

            <TextView
                android:id="@+id/mindfulness_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="@string/meditation"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Books/Quotes Section -->
            <LinearLayout
                android:id="@+id/meditationLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/med1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/happy_meditation1"
                    android:textColorLink="#3F51B5" />

                <TextView
                    android:id="@+id/med2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/happy_meditation2"
                    android:textColorLink="#3F51B5" />
            </LinearLayout>

            <TextView
                android:id="@+id/books_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="@string/books"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/bookLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/book1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/happy_book1"
                    android:textColorLink="#3F51B5" />

                <TextView
                    android:id="@+id/book2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/happy_book2"
                    android:textColorLink="#3F51B5" />

                <TextView
                    android:id="@+id/quote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/happy_quote"
                    android:textColorLink="#3F51B5" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9C27B0"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_navigation_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>