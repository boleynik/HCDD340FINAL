<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/app_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Here are our suggestions based on your input:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="16dp" />

            <!-- Music Section -->
            <TextView
                android:id="@+id/music_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Music"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <!-- Example Music Items -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#DDDDDD"
                android:padding="8dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/music_item1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To give you Joy - Genre: Country" />

                <TextView
                    android:id="@+id/music_item2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To help with the pain - Genre: Hip-Hop"
                    android:paddingTop="4dp" />
            </LinearLayout>

            <!-- Movies Section -->
            <TextView
                android:id="@+id/movies_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Movies/Videos"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <!-- Example Movie Items -->
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="180dp"
                        android:src="@drawable/inside_out_movie"
                        android:layout_marginEnd="8dp" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="180dp"
                        android:src="@drawable/happy_gilmore_movie"
                        android:layout_marginEnd="8dp" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Recipes Section -->
            <TextView
                android:id="@+id/recipes_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recipes"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <!-- Example Recipe Items -->
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/crepe_recipe"
                        android:layout_marginEnd="8dp" />

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/pot_pie_recipe"
                        android:layout_marginEnd="8dp" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Fitness Section -->
            <TextView
                android:id="@+id/fitness_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fitness"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <!-- Placeholder content -->
            <TextView
                android:id="@+id/fitness_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find workouts to suit your goals and mood."
                android:layout_marginBottom="16dp" />

            <!-- Mindfulness Section -->
            <TextView
                android:id="@+id/mindfulness_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mindfulness/Meditation"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <!-- Placeholder content -->
            <TextView
                android:id="@+id/mindfulness_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guided meditations and breathing exercises."
                android:layout_marginBottom="16dp" />

            <!-- Books/Quotes Section -->
            <TextView
                android:id="@+id/books_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Books/Quotes"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <!-- Placeholder content -->
            <TextView
                android:id="@+id/books_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uplifting quotes and inspiring book suggestions."
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>